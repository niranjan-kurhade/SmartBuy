{
    "manifest_version": 3,
    "name": "E-commerce Review Summarizer",
    "version": "1.0",
    "description": "Summarizes product reviews across all pages on e-commerce websites",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }